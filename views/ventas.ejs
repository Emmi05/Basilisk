    var countries = ["Elvia FLORES CARMONA EMMA", "Elias", "emma", "Juan", "Random"];

$(document).ready(function() {
  var inputField = $('#myInput');

  inputField.on('input', autoComplete);

  function autoComplete(event) {
    var inputValue = event.target.value.toLowerCase();
    var suggestions = $('#suggestions');
    suggestions.empty(); // Limpia las sugerencias anteriores

    if (inputValue.length) {
      // Filtra los países que coinciden con la entrada del usuario
      var filteredcountries = countries.filter(function(country) {
        return country.toLowerCase().startsWith(inputValue);
      });

      // Muestra las sugerencias
      filteredCountries.forEach(function(country) {
        var suggestionItem = $('<li class="list-group-item"></li>').text(country);
        suggestions.append(suggestionItem);
      });
    }
  }

  // Maneja el clic en una sugerencia
  $('#suggestions').on('click', '.list-group-item', function() {
    inputField.val($(this).text());
    $('#suggestions').empty(); // Limpia las sugerencias después de seleccionar una
  });
});
</script>
