       <!-- Begin Page Content -->
       <% usuarios.forEach(function(usuario) { %>
        <div class="container-fluid">
            <h1>Editar usuarios</h1>
                <div class="row">
                    <div class="col-md-12">
                        <form action="/update/<%= usuario.id %>" method="POST">
                            <input id="id" name="id" value="<%= usuario.id %>" hidden>

                            <div class="form-group">
                                <label for="user">Usuario:</label>
                                <input type="text" class="form-control" id="user" name="user"  value="<%= usuario.user %>">
                                <div id="rol" class="form-text">
                                    El usuario no debe tener caracteres especiales.
                                   </div>
                            </div>

                            <div class="form-group">
                                <label for="name">Nombre:</label>
                                <input type="text" class="form-control" id="name" name="name"  value="<%= usuario.name %>">
                                <div id="rol" class="form-text">
                                    El nombre debera ser texto unicamente.
                                   </div>
                            </div>

                            <div class="form-group">
                               
                                <label for="rol">Rol:</label>
                                <select class="form-control" id="rol" name="rol" >
                                    <option value="">Seleccionar</option>
                                    <option <%= usuario.rol=='admin' ? "selected" : '' %> value="admin">Administrador</option>
                                    <option <%= usuario.rol=='usuario' ? "selected" : '' %>  value="usuario">Usuario</option>
                                </select>
                            </div>
                            <!-- <div class="form-group">
                                <label for="password">Contrase√±a:</label>
                                <input type="password" class="form-control" id="password" name="pass" required>
                            </div> -->

                            <a href="/" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary"  value="Save" >Guardar</button>

                            <!-- <button type="submit" class="btn btn-primary" value="Save"></button> -->
                        </form>
                    </div>
                </div>
       
                <% }); %>
            
