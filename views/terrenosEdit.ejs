       <!-- Begin Page Content -->
       <% terrenos.forEach(function(terreno) { %>
        <div class="container-fluid">
            <h1>Editar terrenos</h1>
            <form class="row g-3" action="/updateterreno/<%= terreno.id %>" method="POST">

                <input id="id" name="id" value="<%= terreno.id %>" hidden>
                
                
                <div class="col-md-6">
                  <label for="id" name="id" class="form-label">Id Interno</label>
                  <input type="text" class="form-control" id="id_interno" name="id_interno" value="<%= terreno.id_interno %>" >
                </div> 

                <div class="col-md-6">
                  <label for="calle" class="form-label">Calle</label>
                  <input type="text" class="form-control" id="calle" name="calle" placeholder="Calle" value="<%= terreno.calle %>">
              </div>


                <div class="col-md-6">
                  <label for="lote" name="lote" class="form-label">Lote</label>
                  <input type="text" class="form-control" id="name" name="lote" value="<%= terreno.lote %>">
                </div>

                <div class="col-md-6">
                  <label for="manzana" class="form-label">Manzana</label>
                  <input type="text" class="form-control" id="manzana" name="manzana" value="<%= terreno.manzana %>">
                </div>

                 <div class="col-12">
                  <label for="superficie" class="form-label">Superficie</label>
                  <input type="int" class="form-control" id="superficie" placeholder="300, 150" name="superficie" value="<%= terreno.superficie %>">
                </div> 
                <!-- <div class="col-md-6">
                  <label for="inputCity" class="form-label">City</label>
                  <input type="text" class="form-control" id="inputCity">
                </div> -->
                <!-- <div class="col-md-6">
                    <label for="precio" name="precio" class="form-label">precio</label>
                    <input type="int" class="form-control" id="precio" name="precio" value="<%= terreno.precio %>">
                  </div> -->
  
                  <div class="col-md-6">
                    <label for="precio" name="precio" class="form-label">Precio</label>
                    <input type="text" class="form-control" id="precio" name="precio" value="<%= terreno.precio.toLocaleString() %>">
                </div>
                

                  <div class="col-md-6">
                    <label for="predial" class="form-label">Predial</label>
                    <input type="text" class="form-control" id="predial" name="predial" value="<%= terreno.predial %>">
                  </div>
               
                  <div class="col-md-6">
                  <label for="rol" class="form-label">Escritura</label>
                  <!-- <label for="rol">Escritura</label> -->
                  <select class="form-control" id="escritura" name="escritura" >
                      <option value="">Seleccionar</option>
                      <option  <%= terreno.escritura=='si' ? "selected" : '' %> value="si">Si</option>
                      <option  <%= terreno.escritura=='no' ? "selected" : '' %>  value="no">No</option>
                  </select>
                </div>
                
                <div class="col-md-6">
                <label for="rol">Estado</label>
                <select class="form-control" id="estado" name="estado" >
                    <option value="">Seleccionar</option>
                    <option <%= terreno.estado=='pagado' ? "selected" : '' %> value="pagado">Pagado</option>
                    <option <%= terreno.estado=='disponible' ? "selected" : '' %> value="disponible">Disponible</option>
                    <option <%= terreno.estado=='proceso' ? "selected" : '' %> value="proceso">En pago</option>
                </select>
              </div>

              <br> <br> <br> <br>
                <div class="col-12">
                  <a href="/" class="btn btn-secondary">Cancelar</a>
                  <button type="submit" class="btn btn-primary"  value="Save">Guardar</button>
                </div>

              </form>
       
              <% }); %>
