                  <% } %> 
        
       <!-- Begin Page Content -->

        <div class="container-fluid">
            <h1>Registro terrenos</h1>
            <form class="row g-3" action="" method="POST">

                <div class="col-md-6">
                  <label for="id_interno" name="id_interno" class="form-label">Id Interno</label>
                  <input type="text" class="form-control" id="id_interno" name="id_interno" placeholder="id interno">
                </div>

                <div class="col-md-6">
                  <label for="calle" class="form-label">Calle</label>
                  <input type="text" class="form-control" id="calle" name="calle" placeholder="calle">
              </div>


                <div class="col-md-6">
                  <label for="lote" name="lote" class="form-label">Lote</label>
                  <input type="text" class="form-control" id="name" name="lote" placeholder="lote">
                  <div id="rol" class="form-text">
                    Solo debe tener números        
                 </div>
                </div>

                <div class="col-md-6">
                  <label for="manzana" class="form-label">Manzana</label>
                  <input type="text" class="form-control" id="manzana" name="manzana" placeholder="manzana">
                  <div id="rol" class="form-text">
                    Solo debe tener números        
                 </div>
                </div>

                 <div class="col-12">
                  <label for="superficie" class="form-label">Superficie</label>
                  <input type="number" class="form-control" id="superficie" placeholder="superficie" name="superficie">
                  <div id="rol" class="form-text">
                    Solo debe tener números (150, 300).         
                 </div>
                </div> 
               
                <div class="col-md-6">
                    <label for="precio" name="precio" class="form-label">Precio</label>
                    <input type="text" class="form-control" id="precio" name="precio" placeholder="precio">

                    <div id="rol" class="form-text">
                      Solo debe tener números separados por coma (200,000, 150,000).         
                   </div>
                    
                  </div>
  
                  <div class="col-md-6">
                    <label for="predial" class="form-label">Predial</label>
                    <input type="text" class="form-control" id="predial" name="predial" placeholder="predial">
                  </div>
               
                  <div class="col-md-6">
                  <label for="rol" class="form-label">Escritura</label>
                  <select class="form-control" id="escritura" name="escritura" >
                      <option value="">Seleccionar</option>
                      <option value="si">Si</option>
                      <option value="no">No</option>
                  </select>
                </div>

                
                <div class="col-md-6">
                <label for="rol">Estado</label>
                <select class="form-control" id="estado" name="estado" >
                    <option value="">Seleccionar</option>
                    <option value="disponible">Disponible</option>
                    <!-- <option value="proceso">En pago</option> -->
                    
                </select>
              </div>

              <br> <br> <br> <br>
                <div class="col-12">
                  <a href="/" class="btn btn-secondary">Cancelar</a>
                  <button type="submit" class="btn btn-primary"  value="Save">Guardar</button>
                </div>

              </form>
       
            


</div>
<!-- End of Content Wrapper -->

</div>
